doctype html
html
  head
    meta(charset='utf-8')
    link(rel='stylesheet' href='/style.css')
    title Derivando El cielo
    link(rel='icon', href='/Quantumfracture.ico')
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
